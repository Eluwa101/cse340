<main class="login-page">
  <h1><%= title %></h1>

  <!-- Flash Message -->
  <% if (typeof message !== "undefined") { %>
    <div class="flash-message">
      <p><%= message %></p>
    </div>
  <% } %>

<% if (errors) { %>
<ul class="notice">
<% errors.array().forEach(error => { %>
<li><%= error.msg %></li>
<% }) %>
</ul>
<% } %>


  <!-- Login Form And Link To Regiister-->
  <form action="/account/login" method="post" class="login-form">
    <label for="email">Email Address</label>
    <input type="email" name="Account_email" id="email" required value="<%= locals.account_email %>" />

    <label for="password">Password</label>
      <input
      type="password"
      name="account_password"
      id="password"
      required
      minlength="12"
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      title="Password must be at least 12 characters, include 1 uppercase letter, 1 number, and 1 special character."
      autocomplete="new-password"
      aria-describedby="passwordHelp"
      />
    <button type="submit">Login</button>
  </form>

  <p class="register-link">
    Don't have an account?
    <a href="/account/register"><strong>Click âœ… to register</strong></a>
  </p>
</main>

